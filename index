    </div>

    <script>
        // ===== SUPABASE CONFIGURATION =====
        // GANTI DENGAN URL DAN KEY ANDA SENDIRI
        const SUPABASE_URL = 'https://cizovaorntdfawkdbdch.supabase.co';
        const SUPABASE_ANON_KEY = 'sb_publishable_t2Josh_SWK11lqSI7vUUIg_o9ZHBFN3';
        
        // Initialize Supabase client [citation:1]
        let supabase;
        try {
            supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        } catch (error) {
            console.error('Error initializing Supabase:', error);
        }

        // ===== GLOBAL STATE =====
        let state = {
            products: [],
            cart: JSON.parse(localStorage.getItem('cart')) || [],
            orders: [],
            userSession: null,
            adminSettings: {},
            editingProductId: null,
            selectedFiles: [],
            uploadedImageUrls: [],
            currentAdminPage: 'admin-overview-page',
            lastOrder: null,
            adminWhatsapp: '6281234567890' // Default admin WhatsApp
        };

        // ===== UTILITY FUNCTIONS =====
        
        /**
         * Format currency to IDR
         */
        function formatCurrency(amount) {
            return new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR',
                minimumFractionDigits: 0
            }).format(amount);
        }

        /**
         * Show page by ID with smooth transition
         */
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // Show target page
            const targetPage = document.getElementById(pageId);
            if (targetPage) {
                targetPage.classList.add('active');
                
                // Update navigation based on page type
                if (pageId.includes('admin')) {
                    document.getElementById('user-nav').classList.add('hidden');
                    document.getElementById('admin-nav').classList.remove('hidden');
                    
                    // Update admin nav active state
                    document.querySelectorAll('#admin-nav .nav-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    
                    const adminNavItem = document.querySelector(`#admin-nav .nav-item[onclick*="${pageId}"]`);
                    if (adminNavItem) {
                        adminNavItem.classList.add('active');
                    }
                    
                    // Load admin data if needed
                    if (pageId === 'admin-overview-page') {
                        loadAdminDashboard();
                    } else if (pageId === 'admin-products-page') {
                        loadAdminProducts();
                    } else if (pageId === 'admin-orders-page') {
                        loadAdminOrders();
                    } else if (pageId === 'admin-settings-page') {
                        loadAdminSettings();
                    }
                } else {
                    document.getElementById('user-nav').classList.remove('hidden');
                    document.getElementById('admin-nav').classList.add('hidden');
                    
                    // Update user nav active state
                    document.querySelectorAll('#user-nav .nav-item').forEach(item => {
                        item.classList.remove('active');
                    });
                    
                    const userNavItem = document.querySelector(`#user-nav .nav-item[onclick*="${pageId}"]`);
                    if (userNavItem) {
                        userNavItem.classList.add('active');
                    }
                    
                    // Load page-specific data
                    if (pageId === 'home-page') {
                        loadProducts();
                    } else if (pageId === 'cart-page') {
                        loadCart();
                    } else if (pageId === 'checkout-page') {
                        loadCheckout();
                    }
                }
                
                // Scroll to top
                window.scrollTo(0, 0);
            }
        }

        /**
         * Show iOS style alert
         */
        function showAlert(title, message) {
            const alertModal = document.getElementById('alert-modal');
            const alertTitle = document.getElementById('alert-title');
            const alertMessage = document.getElementById('alert-message');
            
            alertTitle.textContent = title;
            alertMessage.textContent = message;
            alertModal.classList.add('active');
            
            // Auto close after 3 seconds
            setTimeout(() => {
                alertModal.classList.remove('active');
            }, 3000);
            
            // Manual close
            document.getElementById('alert-confirm').onclick = () => {
                alertModal.classList.remove('active');
            };
        }

        /**
         * Validate WhatsApp number format
         */
        function validateWhatsApp(number) {
            const regex = /^62\d{9,13}$/;
            return regex.test(number);
        }

        /**
         * Update cart count in UI
         */
        function updateCartCount() {
            const count = state.cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cart-count').textContent = count;
            localStorage.setItem('cart', JSON.stringify(state.cart));
        }

        // ===== PRODUCT MANAGEMENT =====
        
        /**
         * Load products for home page
         */
        async function loadProducts() {
            try {
                const { data, error } = await supabase
                    .from('products')
                    .select('*')
                    .eq('aktif', true)
                    .order('created_at', { ascending: false });
                
                if (error) throw error;
                
                state.products = data || [];
                renderProducts();
            } catch (error) {
                console.error('Error loading products:', error);
                showAlert('Error', 'Gagal memuat produk');
            }
        }

        /**
         * Render products to home page
         */
        function renderProducts() {
            const container = document.getElementById('products-container');
            if (!container) return;
            
            if (state.products.length === 0) {
                container.innerHTML = `
                    <div class="col-span-full text-center py-xl">
                        <span class="material-symbols-outlined text-6xl text-secondary mb-md">inventory_2</span>
                        <h3 class="mb-sm">Tidak ada produk</h3>
                        <p class="text-secondary">Belum ada produk yang tersedia</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = state.products.map(product => `
                <div class="product-card">
                    <div class="relative">
                        <img src="${product.gambar?.[0] || 'https://placehold.co/300x300/e5e5ea/8e8e93?text=No+Image'}" 
                             alt="${product.nama}"
                             class="product-image">
                        <button onclick="addToCart('${product.id}')" 
                                class="add-to-cart-btn">
                            <span class="material-symbols-outlined">add</span>
                        </button>
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">${product.nama}</h3>
                        <div class="text-secondary text-sm mb-sm">
                            ${product.detail_spesifik?.map(d => `${d.label}: ${d.value}`).join(', ') || ''}
                        </div>
                        <div class="product-price">${formatCurrency(product.harga)}</div>
                    </div>
                </div>
            `).join('');
        }

        // ===== CART MANAGEMENT =====
        
        /**
         * Add product to cart
         */
        function addToCart(productId) {
            const product = state.products.find(p => p.id === productId);
            if (!product) return;
            
            // Check if product already in cart
            const existingItem = state.cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                state.cart.push({
                    id: product.id,
                    name: product.nama,
                    price: product.harga,
                    image: product.gambar?.[0],
                    details: product.detail_spesifik,
                    quantity: 1
                });
            }
            
            updateCartCount();
            showAlert('Berhasil', 'Produk ditambahkan ke keranjang');
            
            // Add animation to cart icon
            const cartIcon = document.getElementById('cart-icon');
            cartIcon.classList.add('animate-pulse');
            setTimeout(() => cartIcon.classList.remove('animate-pulse'), 500);
        }

        /**
         * Load and render cart page
         */
        function loadCart() {
            const container = document.getElementById('cart-items');
            const summary = document.getElementById('cart-summary');
            
            if (state.cart.length === 0) {
                container.innerHTML = document.getElementById('empty-cart').outerHTML;
                summary.classList.add('hidden');
                return;
            }
            
            container.innerHTML = state.cart.map(item => `
                <div class="cart-item">
                    <img src="${item.image || 'https://placehold.co/80x80/e5e5ea/8e8e93?text=No+Image'}" 
                         alt="${item.name}"
                         class="cart-item-image">
                    <div class="cart-item-details">
                        <h3 class="cart-item-name">${item.name}</h3>
                        <div class="caption mb-sm">
                            ${item.details?.map(d => `${d.label}: ${d.value}`).join(', ') || ''}
                        </div>
                        <div class="cart-item-price">${formatCurrency(item.price)}</div>
                    </div>
                    <div class="quantity-control">
                        <button onclick="updateQuantity('${item.id}', -1)" 
                                class="quantity-btn">
                            <span class="material-symbols-outlined">remove</span>
                        </button>
                        <span class="quantity-value">${item.quantity}</span>
                        <button onclick="updateQuantity('${item.id}', 1)" 
                                class="quantity-btn">
                            <span class="material-symbols-outlined">add</span>
                        </button>
                    </div>
                </div>
            `).join('');
            
            // Calculate total
            const total = state.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            document.getElementById('cart-total').textContent = formatCurrency(total);
            summary.classList.remove('hidden');
            
            // Setup checkout button
            document.getElementById('checkout-button').onclick = () => {
                if (state.cart.length > 0) {
                    showPage('checkout-page');
                }
            };
        }

        /**
         * Update item quantity in cart
         */
        function updateQuantity(productId, change) {
            const itemIndex = state.cart.findIndex(item => item.id === productId);
            if (itemIndex === -1) return;
            
            state.cart[itemIndex].quantity += change;
            
            if (state.cart[itemIndex].quantity <= 0) {
                state.cart.splice(itemIndex, 1);
            }
            
            updateCartCount();
            loadCart();
        }

        // ===== CHECKOUT SYSTEM =====
        
        /**
         * Load checkout page
         */
        function loadCheckout() {
            // Render order summary
            const summary = document.getElementById('checkout-summary');
            const total = state.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            summary.innerHTML = state.cart.map(item => `
                <div class="flex justify-between items-center py-sm border-b border-separator">
                    <div>
                        <div class="font-medium">${item.name}</div>
                        <div class="caption">${item.quantity} x ${formatCurrency(item.price)}</div>
                    </div>
                    <div class="font-medium">${formatCurrency(item.price * item.quantity)}</div>
                </div>
            `).join('') + `
                <div class="flex justify-between items-center py-sm font-bold">
                    <span>Total</span>
                    <span class="text-primary">${formatCurrency(total)}</span>
                </div>
            `;
            
            // Setup validation
            setupCheckoutValidation();
        }

        /**
         * Setup checkout form validation
         */
        function setupCheckoutValidation() {
            const form = document.getElementById('checkout-page');
            const inputs = form.querySelectorAll('input, textarea');
            const checkoutBtn = document.getElementById('process-checkout');
            
            function validateForm() {
                const whatsapp = document.getElementById('checkout-whatsapp').value;
                const name = document.getElementById('checkout-name').value.trim();
                const address = document.getElementById('checkout-address').value.trim();
                
                const isValid = validateWhatsApp(whatsapp) && name.length > 0 && address.length > 0;
                
                checkoutBtn.disabled = !isValid;
                return isValid;
            }
            
            // Validate on input
            inputs.forEach(input => {
                input.addEventListener('input', validateForm);
            });
            
            // Setup checkout button
            checkoutBtn.onclick = async () => {
                if (validateForm()) {
                    await processCheckout();
                }
            };
        }

        /**
         * Process checkout and save order
         */
        async function processCheckout() {
            try {
                const whatsapp = document.getElementById('checkout-whatsapp').value;
                const name = document.getElementById('checkout-name').value;
                const address = document.getElementById('checkout-address').value;
                const method = document.querySelector('input[name="payment-method"]:checked').value;
                
                const orderDetails = state.cart.map(item => ({
                    product_id: item.id,
                    name: item.name,
                    price: item.price,
                    quantity: item.quantity,
                    image: item.image,
                    specific_details: item.details
                }));
                
                const total = state.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
                
                // Save to Supabase [citation:1]
                const { data, error } = await supabase
                    .from('orders')
                    .insert({
                        nama_penerima: name,
                        whatsapp: whatsapp,
                        alamat: address,
                        metode: method,
                        detail_pesanan: orderDetails,
                        total: total,
                        status: 'BARU',
                        user_id: state.userSession?.user?.id || null
                    })
                    .select()
                    .single();
                
                if (error) throw error;
                
                // Save order for confirmation
                state.lastOrder = data;
                
                // Send WhatsApp notification
                sendWhatsAppNotification(data);
                
                // Clear cart and show confirmation
                state.cart = [];
                updateCartCount();
                localStorage.removeItem('cart');
                
                // Show order ID
                document.getElementById('order-id').textContent = `#${data.id.substring(0, 8).toUpperCase()}`;
                
                showPage('confirmation-page');
                
            } catch (error) {
                console.error('Error processing checkout:', error);
                showAlert('Error', 'Gagal memproses checkout');
            }
        }

        /**
         * Send WhatsApp notification to admin
         */
        function sendWhatsAppNotification(order) {
            const message = `
                *PESANAN BARU*
                --------------------------
                *ID:* ${order.id.substring(0, 8).toUpperCase()}
                *Nama:* ${order.nama_penerima}
                *WhatsApp:* ${order.whatsapp}
                *Alamat:* ${order.alamat}
                *Metode:* ${order.metode}
                *Total:* ${formatCurrency(order.total)}
                --------------------------
                *Detail Pesanan:*
                ${order.detail_pesanan.map(item => `• ${item.name} (${item.quantity}x)`).join('\n')}
            `.replace(/\n/g, '%0A').replace(/\*/g, '*');
            
            const url = `https://wa.me/${state.adminWhatsapp}?text=${message}`;
            window.open(url, '_blank');
        }

        // ===== ADMIN AUTHENTICATION =====
        
        /**
         * Show admin auth modal
         */
        function showAdminAuth() {
            document.getElementById('auth-modal').classList.add('active');
            showAuthTab('login');
        }

        /**
         * Show specific auth tab
         */
        function showAuthTab(tab) {
            document.getElementById('login-form').classList.toggle('hidden', tab !== 'login');
            document.getElementById('register-form').classList.toggle('hidden', tab !== 'register');
            document.getElementById('forgot-form').classList.toggle('hidden', tab !== 'forgot');
            
            // Update tab buttons
            document.getElementById('auth-tab-login').classList.toggle('active', tab === 'login');
            document.getElementById('auth-tab-register').classList.toggle('active', tab === 'register');
        }

        /**
         * Handle admin login
         */
        async function handleLogin() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            
            if (!email || !password) {
                showAlert('Error', 'Email dan password harus diisi');
                return;
            }
            
            try {
                const { data, error } = await supabase.auth.signInWithPassword({
                    email,
                    password
                });
                
                if (error) throw error;
                
                state.userSession = data;
                document.getElementById('auth-modal').classList.remove('active');
                showPage('admin-overview-page');
                loadAdminSettings();
                
            } catch (error) {
                console.error('Login error:', error);
                showAlert('Error', 'Login gagal. Periksa email dan password.');
            }
        }

        /**
         * Handle admin registration
         */
        async function handleRegister() {
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const confirm = document.getElementById('register-confirm').value;
            
            if (!email || !password || !confirm) {
                showAlert('Error', 'Semua field harus diisi');
                return;
            }
            
            if (password.length < 6) {
                showAlert('Error', 'Password minimal 6 karakter');
                return;
            }
            
            if (password !== confirm) {
                showAlert('Error', 'Password tidak cocok');
                return;
            }
            
            try {
                const { data, error } = await supabase.auth.signUp({
                    email,
                    password
                });
                
                if (error) throw error;
                
                showAlert('Berhasil', 'Pendaftaran berhasil. Silakan login.');
                showAuthTab('login');
                
            } catch (error) {
                console.error('Registration error:', error);
                showAlert('Error', 'Pendaftaran gagal');
            }
        }

        /**
         * Handle password reset
         */
        async function handleForgotPassword() {
            const email = document.getElementById('forgot-email').value;
            
            if (!email) {
                showAlert('Error', 'Email harus diisi');
                return;
            }
            
            try {
                const { error } = await supabase.auth.resetPasswordForEmail(email);
                
                if (error) throw error;
                
                showAlert('Berhasil', 'Tautan reset telah dikirim ke email Anda');
                showAuthTab('login');
                
            } catch (error) {
                console.error('Forgot password error:', error);
                showAlert('Error', 'Gagal mengirim tautan reset');
            }
        }

        /**
         * Handle admin logout
         */
        async function handleLogout() {
            try {
                await supabase.auth.signOut();
                state.userSession = null;
                showPage('home-page');
            } catch (error) {
                console.error('Logout error:', error);
            }
        }

        // ===== ADMIN DASHBOARD =====
        
        /**
         * Load admin dashboard data
         */
        async function loadAdminDashboard() {
            try {
                // Load total orders
                const { data: orders, error: ordersError } = await supabase
                    .from('orders')
                    .select('*');
                
                if (ordersError) throw ordersError;
                
                // Load new orders (status BARU)
                const newOrders = orders?.filter(order => order.status === 'BARU') || [];
                
                // Load total revenue
                const totalRevenue = orders?.reduce((sum, order) => sum + order.total, 0) || 0;
                
                // Load total products
                const { data: products, error: productsError } = await supabase
                    .from('products')
                    .select('*');
                
                if (productsError) throw productsError;
                
                // Update UI
                document.getElementById('total-orders').textContent = orders?.length || 0;
                document.getElementById('new-orders').textContent = newOrders.length;
                document.getElementById('total-revenue').textContent = formatCurrency(totalRevenue);
                document.getElementById('total-products').textContent = products?.length || 0;
                
                // Update admin name
                if (state.userSession?.user?.email) {
                    document.getElementById('admin-name').textContent = 
                        state.userSession.user.email.split('@')[0];
                }
                
            } catch (error) {
                console.error('Error loading dashboard:', error);
            }
        }

        /**
         * Load admin products list
         */
        async function loadAdminProducts() {
            try {
                const { data, error } = await supabase
                    .from('products')
                    .select('*')
                    .order('created_at', { ascending: false });
                
                if (error) throw error;
                
                state.products = data || [];
                renderAdminProducts();
                
            } catch (error) {
                console.error('Error loading admin products:', error);
            }
        }

        /**
         * Render admin products list
         */
        function renderAdminProducts() {
            const container = document.getElementById('admin-products-list');
            if (!container) return;
            
            if (state.products.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-xl">
                        <span class="material-symbols-outlined text-6xl text-secondary mb-md">inventory_2</span>
                        <h3 class="mb-sm">Belum ada produk</h3>
                        <p class="text-secondary mb-lg">Tambahkan produk pertama Anda</p>
                        <button onclick="addNewProduct()" class="btn btn-primary">
                            Tambah Produk
                        </button>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = state.products.map(product => `
                <div class="product-list-item">
                    <div class="product-status ${product.aktif ? 'active' : 'inactive'}"></div>
                    <img src="${product.gambar?.[0] || 'https://placehold.co/60x60/e5e5ea/8e8e93?text=No+Image'}" 
                         alt="${product.nama}"
                         class="w-16 h-16 rounded-lg object-cover">
                    <div class="flex-1">
                        <h3 class="font-medium">${product.nama}</h3>
                        <div class="caption">
                            ${formatCurrency(product.harga)} • Stok: ${product.stok}
                        </div>
                    </div>
                    <div class="flex gap-sm">
                        <button onclick="editProduct('${product.id}')" 
                                class="btn btn-outline">
                            <span class="material-symbols-outlined">edit</span>
                        </button>
                        <button onclick="toggleProductStatus('${product.id}', ${!product.aktif})" 
                                class="btn ${product.aktif ? 'btn-outline' : 'btn-primary'}">
                            <span class="material-symbols-outlined">${product.aktif ? 'visibility_off' : 'visibility'}</span>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        /**
         * Add new product
         */
        function addNewProduct() {
            state.editingProductId = null;
            document.getElementById('product-form-title').textContent = 'Tambah Produk';
            document.getElementById('delete-product').classList.add('hidden');
            
            // Clear form
            document.getElementById('product-name').value = '';
            document.getElementById('product-price').value = '';
            document.getElementById('product-stock').value = '';
            document.getElementById('product-active').checked = true;
            document.getElementById('product-images-preview').innerHTML = `
                <label class="aspect-square border-2 border-dashed border-separator rounded-lg flex flex-col items-center justify-center cursor-pointer hover:border-primary transition-colors">
                    <span class="material-symbols-outlined text-primary text-3xl mb-sm">add_photo_alternate</span>
                    <span class="text-sm text-primary">Tambah Gambar</span>
                    <input type="file" id="product-image-input" multiple accept="image/*" class="hidden">
                </label>
            `;
            document.getElementById('product-details-container').innerHTML = '';
            
            // Setup image upload
            setupImageUpload();
            
            showPage('admin-add-edit-product-page');
        }

        /**
         * Edit existing product
         */
        async function editProduct(productId) {
            try {
                const { data, error } = await supabase
                    .from('products')
                    .select('*')
                    .eq('id', productId)
                    .single();
                
                if (error) throw error;
                
                state.editingProductId = productId;
                document.getElementById('product-form-title').textContent = 'Edit Produk';
                document.getElementById('delete-product').classList.remove('hidden');
                
                // Fill form
                document.getElementById('product-name').value = data.nama;
                document.getElementById('product-price').value = data.harga;
                document.getElementById('product-stock').value = data.stok;
                document.getElementById('product-active').checked = data.aktif;
                
                // Load images
                const imagesContainer = document.getElementById('product-images-preview');
                imagesContainer.innerHTML = '';
                
                if (data.gambar && data.gambar.length > 0) {
                    data.gambar.forEach((image, index) => {
                        imagesContainer.innerHTML += `
                            <div class="relative">
                                <img src="${image}" class="aspect-square object-cover rounded-lg">
                                <button onclick="removeImage(${index})" 
                                        class="absolute top-1 right-1 bg-danger text-white rounded-full w-6 h-6 flex items-center justify-center">
                                    <span class="material-symbols-outlined text-sm">close</span>
                                </button>
                            </div>
                        `;
                    });
                }
                
                imagesContainer.innerHTML += `
                    <label class="aspect-square border-2 border-dashed border-separator rounded-lg flex flex-col items-center justify-center cursor-pointer hover:border-primary transition-colors">
                        <span class="material-symbols-outlined text-primary text-3xl mb-sm">add_photo_alternate</span>
                        <span class="text-sm text-primary">Tambah Gambar</span>
                        <input type="file" id="product-image-input" multiple accept="image/*" class="hidden">
                    </label>
                `;
                
                // Load details
                const detailsContainer = document.getElementById('product-details-container');
                detailsContainer.innerHTML = '';
                
                if (data.detail_spesifik && data.detail_spesifik.length > 0) {
                    data.detail_spesifik.forEach(detail => {
                        addDetailField(detail.label, detail.value);
                    });
                }
                
                // Setup image upload
                setupImageUpload();
                
                // Setup delete button
                document.getElementById('delete-product').onclick = () => {
                    if (confirm('Hapus produk ini?')) {
                        deleteProduct(productId);
                    }
                };
                
                showPage('admin-add-edit-product-page');
                
            } catch (error) {
                console.error('Error loading product for edit:', error);
                showAlert('Error', 'Gagal memuat produk');
            }
        }

        /**
         * Setup image upload functionality
         */
        function setupImageUpload() {
            const input = document.getElementById('product-image-input');
            if (input) {
                input.onchange = handleImageUpload;
            }
        }

        /**
         * Handle image upload
         */
        async function handleImageUpload(event) {
            const files = Array.from(event.target.files);
            const preview = document.getElementById('product-images-preview');
            
            for (const file of files) {
                // Create preview
                const reader = new FileReader();
                reader.onload = (e) => {
                    preview.insertAdjacentHTML('beforeend', `
                        <div class="relative">
                            <img src="${e.target.result}" class="aspect-square object-cover rounded-lg">
                            <button onclick="this.parentElement.remove()" 
                                    class="absolute top-1 right-1 bg-danger text-white rounded-full w-6 h-6 flex items-center justify-center">
                                <span class="material-symbols-outlined text-sm">close</span>
                            </button>
                        </div>
                    `);
                };
                reader.readAsDataURL(file);
                
                // Store file for upload
                state.selectedFiles.push(file);
            }
        }

        /**
         * Add detail field to product form
         */
        function addDetailField(label = '', value = '') {
            const container = document.getElementById('product-details-container');
            const id = Date.now();
            
            container.innerHTML += `
                <div class="flex gap-sm items-center">
                    <input type="text" placeholder="Label (contoh: Warna)" 
                           value="${label}"
                           class="input-field flex-1" data-detail-label>
                    <input type="text" placeholder="Value (contoh: Merah)" 
                           value="${value}"
                           class="input-field flex-1" data-detail-value>
                    <button onclick="this.parentElement.remove()" 
                            class="btn btn-danger">
                        <span class="material-symbols-outlined">delete</span>
                    </button>
                </div>
            `;
        }

        /**
         * Save product
         */
        async function saveProduct() {
            try {
                const name = document.getElementById('product-name').value.trim();
                const price = parseInt(document.getElementById('product-price').value);
                const stock = parseInt(document.getElementById('product-stock').value);
                const active = document.getElementById('product-active').checked;
                
                if (!name || isNaN(price) || isNaN(stock)) {
                    showAlert('Error', 'Harap isi semua field dengan benar');
                    return;
                }
                
                // Collect detail fields
                const details = [];
                const detailLabels = document.querySelectorAll('[data-detail-label]');
                const detailValues = document.querySelectorAll('[data-detail-value]');
                
                detailLabels.forEach((labelInput, index) => {
                    const label = labelInput.value.trim();
                    const value = detailValues[index]?.value.trim();
                    
                    if (label && value) {
                        details.push({ label, value });
                    }
                });
                
                // Upload images if any
                let imageUrls = [];
                if (state.selectedFiles.length > 0) {
                    for (const file of state.selectedFiles) {
                        const fileName = `${Date.now()}-${file.name}`;
                        const { data, error } = await supabase.storage
                            .from('images')
                            .upload(fileName, file);
                        
                        if (error) throw error;
                        
                        const { data: urlData } = supabase.storage
                            .from('images')
                            .getPublicUrl(fileName);
                        
                        imageUrls.push(urlData.publicUrl);
                    }
                }
                
                // Get existing images if editing
                if (state.editingProductId) {
                    const { data: existingProduct } = await supabase
                        .from('products')
                        .select('gambar')
                        .eq('id', state.editingProductId)
                        .single();
                    
                    if (existingProduct?.gambar) {
                        imageUrls = [...existingProduct.gambar, ...imageUrls];
                    }
                }
                
                // Save product to database [citation:1]
                const productData = {
                    nama: name,
                    harga: price,
                    stok: stock,
                    aktif: active,
                    detail_spesifik: details,
                    gambar: imageUrls,
                    updated_at: new Date().toISOString()
                };
                
                let result;
                
                if (state.editingProductId) {
                    // Update existing
                    const { data, error } = await supabase
                        .from('products')
                        .update(productData)
                        .eq('id', state.editingProductId)
                        .select()
                        .single();
                    
                    if (error) throw error;
                    result = data;
                } else {
                    // Create new
                    const { data, error } = await supabase
                        .from('products')
                        .insert(productData)
                        .select()
                        .single();
                    
                    if (error) throw error;
                    result = data;
                }
                
                // Reset state
                state.selectedFiles = [];
                state.uploadedImageUrls = [];
                
                showAlert('Berhasil', 'Produk berhasil disimpan');
                loadAdminProducts();
                showPage('admin-products-page');
                
            } catch (error) {
                console.error('Error saving product:', error);
                showAlert('Error', 'Gagal menyimpan produk');
            }
        }

        /**
         * Toggle product active status
         */
        async function toggleProductStatus(productId, active) {
            try {
                const { error } = await supabase
                    .from('products')
                    .update({ 
                        aktif: active,
                        updated_at: new Date().toISOString()
                    })
                    .eq('id', productId);
                
                if (error) throw error;
                
                loadAdminProducts();
                showAlert('Berhasil', `Produk ${active ? 'diaktifkan' : 'dinonaktifkan'}`);
                
            } catch (error) {
                console.error('Error toggling product status:', error);
                showAlert('Error', 'Gagal mengubah status produk');
            }
        }

        /**
         * Delete product
         */
        async function deleteProduct(productId) {
            try {
                const { error } = await supabase
                    .from('products')
                    .delete()
                    .eq('id', productId);
                
                if (error) throw error;
                
                showAlert('Berhasil', 'Produk berhasil dihapus');
                loadAdminProducts();
                showPage('admin-products-page');
                
            } catch (error) {
                console.error('Error deleting product:', error);
                showAlert('Error', 'Gagal menghapus produk');
            }
        }

        // ===== ORDER MANAGEMENT =====
        
        /**
         * Load admin orders
         */
        async function loadAdminOrders(filter = 'all') {
            try {
                let query = supabase
                    .from('orders')
                    .select('*')
                    .order('created_at', { ascending: false });
                
                if (filter !== 'all') {
                    query = query.eq('status', filter);
                }
                
                const { data, error } = await query;
                
                if (error) throw error;
                
                state.orders = data || [];
                renderAdminOrders();
                
            } catch (error) {
                console.error('Error loading orders:', error);
            }
        }

        /**
         * Render admin orders list
         */
        function renderAdminOrders() {
            const container = document.getElementById('admin-orders-list');
            if (!container) return;
            
            if (state.orders.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-xl">
                        <span class="material-symbols-outlined text-6xl text-secondary mb-md">receipt_long</span>
                        <h3 class="mb-sm">Belum ada pesanan</h3>
                        <p class="text-secondary">Pesanan akan muncul di sini</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = state.orders.map(order => `
                <div class="order-card">
                    <div class="order-header">
                        <div>
                            <div class="order-id">#${order.id.substring(0, 8).toUpperCase()}</div>
                            <h3 class="mt-xs">${order.nama_penerima}</h3>
                        </div>
                        <div class="order-status status-${order.status.toLowerCase()}">
                            ${order.status}
                        </div>
                    </div>
                    
                    <div class="caption mb-sm">
                        ${new Date(order.created_at).toLocaleDateString('id-ID')} • 
                        ${order.metode} • 
                        ${formatCurrency(order.total)}
                    </div>
                    
                    <div class="mb-md">
                        ${order.detail_pesanan.slice(0, 2).map(item => `
                            <div class="text-sm">• ${item.name} (${item.quantity}x)</div>
                        `).join('')}
                        ${order.detail_pesanan.length > 2 ? 
                            `<div class="text-sm text-primary">+${order.detail_pesanan.length - 2} item lainnya</div>` : ''}
                    </div>
                    
                    <div class="flex gap-sm">
                        <button onclick="contactCustomer('${order.whatsapp}')" 
                                class="btn btn-outline flex-1">
                            <span class="material-symbols-outlined">chat</span>
                            Hubungi
                        </button>
                        
                        <select onchange="updateOrderStatus('${order.id}', this.value)" 
                                class="input-field flex-1">
                            <option value="BARU" ${order.status === 'BARU' ? 'selected' : ''}>Baru</option>
                            <option value="DIPROSES" ${order.status === 'DIPROSES' ? 'selected' : ''}>Diproses</option>
                            <option value="SELESAI" ${order.status === 'SELESAI' ? 'selected' : ''}>Selesai</option>
                            <option value="BATAL" ${order.status === 'BATAL' ? 'selected' : ''}>Batal</option>
                        </select>
                    </div>
                </div>
            `).join('');
        }

        /**
         * Update order status
         */
        async function updateOrderStatus(orderId, status) {
            try {
                const { error } = await supabase
                    .from('orders')
                    .update({ 
                        status: status,
                        updated_at: new Date().toISOString()
                    })
                    .eq('id', orderId);
                
                if (error) throw error;
                
                loadAdminOrders();
                showAlert('Berhasil', 'Status pesanan diperbarui');
                
            } catch (error) {
                console.error('Error updating order status:', error);
                showAlert('Error', 'Gagal mengubah status');
            }
        }

        /**
         * Contact customer via WhatsApp
         */
        function contactCustomer(whatsapp) {
            const url = `https://wa.me/${whatsapp}`;
            window.open(url, '_blank');
        }

        /**
         * Refresh orders list
         */
        function refreshOrders() {
            const activeFilter = document.querySelector('.filter-btn.active');
            const filter = activeFilter ? activeFilter.dataset.filter : 'all';
            loadAdminOrders(filter);
        }

        // ===== ADMIN SETTINGS =====
        
        /**
         * Load admin settings
         */
        async function loadAdminSettings() {
            try {
                const { data, error } = await supabase
                    .from('app_settings')
                    .select('*');
                
                if (error) throw error;
                
                // Convert array to object
                state.adminSettings = {};
                data?.forEach(setting => {
                    state.adminSettings[setting.setting_key] = setting.setting_value;
                });
                
                // Populate form
                document.getElementById('store-name').value = state.adminSettings.store_name || '';
                document.getElementById('admin-whatsapp').value = state.adminSettings.admin_whatsapp || '';
                state.adminWhatsapp = state.adminSettings.admin_whatsapp || '6281234567890';
                
                document.getElementById('notif-new-orders').checked = 
                    state.adminSettings.notif_new_orders !== false;
                document.getElementById('notif-low-stock').checked = 
                    state.adminSettings.notif_low_stock !== false;
                
            } catch (error) {
                console.error('Error loading settings:', error);
            }
        }

        /**
         * Save admin settings
         */
        async function saveSettings() {
            try {
                const settings = [
                    {
                        setting_key: 'store_name',
                        setting_value: document.getElementById('store-name').value.trim()
                    },
                    {
                        setting_key: 'admin_whatsapp',
                        setting_value: document.getElementById('admin-whatsapp').value.trim()
                    },
                    {
                        setting_key: 'notif_new_orders',
                        setting_value: document.getElementById('notif-new-orders').checked
                    },
                    {
                        setting_key: 'notif_low_stock',
                        setting_value: document.getElementById('notif-low-stock').checked
                    }
                ];
                
                // Upsert settings
                for (const setting of settings) {
                    const { error } = await supabase
                        .from('app_settings')
                        .upsert(setting);
                    
                    if (error) throw error;
                }
                
                // Update state
                state.adminWhatsapp = settings.find(s => s.setting_key === 'admin_whatsapp').setting_value;
                
                showAlert('Berhasil', 'Pengaturan disimpan');
                
            } catch (error) {
                console.error('Error saving settings:', error);
                showAlert('Error', 'Gagal menyimpan pengaturan');
            }
        }

        // ===== EVENT LISTENERS SETUP =====
        
        /**
         * Setup all event listeners
         */
        function setupEventListeners() {
            // Auth modal
            document.getElementById('auth-tab-login').onclick = () => showAuthTab('login');
            document.getElementById('auth-tab-register').onclick = () => showAuthTab('register');
            document.getElementById('login-forgot').onclick = () => showAuthTab('forgot');
            document.getElementById('forgot-back').onclick = () => showAuthTab('login');
            document.getElementById('auth-close').onclick = () => {
                document.getElementById('auth-modal').classList.remove('active');
            };
            
            // Auth forms
            document.getElementById('login-submit').onclick = handleLogin;
            document.getElementById('register-submit').onclick = handleRegister;
            document.getElementById('forgot-submit').onclick = handleForgotPassword;
            
            // Logout
            document.getElementById('admin-logout').onclick = handleLogout;
            
            // Product form
            document.getElementById('save-product').onclick = saveProduct;
            
            // Settings
            document.getElementById('save-settings').onclick = saveSettings;
            
            // Order filters
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.onclick = () => {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    loadAdminOrders(btn.dataset.filter);
                };
            });
            
            // Product search
            const productSearch = document.getElementById('search-products');
            if (productSearch) {
                productSearch.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const filtered = state.products.filter(product =>
                        product.nama.toLowerCase().includes(searchTerm)
                    );
                    
                    // Temporarily replace state.products for rendering
                    const originalProducts = state.products;
                    state.products = filtered;
                    renderProducts();
                    state.products = originalProducts;
                });
            }
            
            // Cart icon click
            document.getElementById('cart-icon').onclick = () => {
                showPage('cart-page');
            };
        }

        // ===== INITIALIZATION =====
        
        /**
         * Initialize the application
         */
        async function init() {
            try {
                // Setup event listeners
                setupEventListeners();
                
                // Check auth state
                const { data: { session } } = await supabase.auth.getSession();
                if (session) {
                    state.userSession = { user: session.user };
                    showPage('admin-overview-page');
                } else {
                    showPage('home-page');
                    loadProducts();
                }
                
                // Load cart from localStorage
                updateCartCount();
                
                // Auto-save cart on unload
                window.addEventListener('beforeunload', () => {
                    localStorage.setItem('cart', JSON.stringify(state.cart));
                });
                
            } catch (error) {
                console.error('Initialization error:', error);
                showPage('home-page');
            }
        }

        // Start the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
